function updateText() {
  const textElement = document.getElementById('responsive-text');
  if (window.matchMedia('(max-width: 768px)').matches) {
    textElement.textContent = 'New Text for Tablet';
  } else {
    textElement.textContent = 'Original Text';
  }
}

window.addEventListener('resize', updateText);
window.addEventListener('DOMContentLoaded', updateText);